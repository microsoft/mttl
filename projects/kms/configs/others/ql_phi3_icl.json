{
    "loss_function": "dcd",
    "dataset_type": "dcd_km",
    "dataset": "az://mttldata/quality-summaries-qa-phi-3-medium",
    "max_input_length": 128000,
    "eval_every_n_epoch": -1,
    "save_every": 50,
    "eval_every": 50,
    "total_steps": 1500, 
    "num_train_epochs": -1,
    "use_only_type": "summary",
    "split_train_dev_on": "output",
    "lora_rank": 16,
    "lora_alpha": 16,
    "lora_dropout": 0.05,
    "weight_decay": 0.0,
    "model_modifier": "lora",
    "modify_layers": ".*o_proj.*|.*qkv_proj.*|.*up_proj.*|.*gate_up_proj.*",
    "trainable_param_names": ".*lora_[ab].*",
    "learning_rate": 1e-3,
    "micro_batch_size": 2,
    "train_batch_size": 8,
    "predict_batch_size": 2,
    "precision": "bf16",
    "model": "microsoft/Phi-3-mini-128k-instruct",
    "model_family": "gpt",
    "optimizer": "adamw",
    "warmup_proportion": 0.06,
    "max_output_length": 64,
    "padding_side": "left",
    "truncation_side": "left",
    "attn_implementation": "flash_attention_2",
    "evaluate_on": "quality",
    "task_name_field": "document_id",
    "include_context": true
}

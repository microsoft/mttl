{
    "loss_function": "lm",
    "dataset_type": "doc_km",
    "evaluate_on": "quality",
    "dataset": "az://mttldata/quality-sanitized",
    "overwrite_output_dir": true,
    "padding_side": "right",
    "truncation_side": "left",
    "max_input_length": 4096,
    "eval_every": 25,
    "save_every": 25,
    "total_steps": 150,
    "learning_rate": 1e-3,
    "use_only_type": "summary",
    "split_train_dev_on": "output",
    "lora_rank": 16,
    "lora_alpha": 4,
    "lora_dropout": 0.05,
    "weight_decay": 0.0,
    "model_modifier": "lora",
    "modify_layers": ".*o_proj.*|.*qkv_proj.*|.*up_proj.*|.*gate_up_proj.*|.*down_proj.*",
    "trainable_param_names": ".*lora_[ab].*",
    "micro_batch_size": 8,
    "train_batch_size": 8,
    "predict_batch_size": 16,
    "precision": "bf16",
    "model": "microsoft/Phi-3-mini-4k-instruct",
    "model_family": "gpt",
    "optimizer": "adamw",
    "warmup_proportion": 0.06,
    "attn_implementation": "flash_attention_2",
    "task_name_field": "document_id"
}
